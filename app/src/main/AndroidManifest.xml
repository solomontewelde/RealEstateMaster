        <activity
            android:name=".activities.LoginSignUpPage"
            android:label="Login"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!--
        <activity android:name=".activities.SearchFilterActivity">

        </activity>
        -->
        <activity android:name=".activities.Main2Activity" />
        <activity android:name=".activities.ResultsActivity" />
        <activity android:name=".activities.DetailActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity
            android:name=".activities.NavigaitionDrawerActivity"
            android:label="@string/title_activity_navigaition_drawer"
            android:theme="@style/AppTheme" />
        <activity android:name=".activities.SignUpActivity"></activity>
